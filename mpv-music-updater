#!/usr/bin/env bash
# File: mpv-music-updater (Archival Version)

set -euo pipefail

TARGET_PATH="${1:-}"
CONFIG_DIR="$HOME/.config/mpv-music"

# --- Colors ---
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

# --- SELF-DESTRUCT TRAP ---
cleanup() {
    rm -f "$0"
}
trap cleanup EXIT

echo -e "${YELLOW}========================================================${NC}"
echo -e "${RED}NOTICE: The Bash version of mpv-music is now ARCHIVED.${NC}"
echo -e "${GREEN}A high-performance Rust rewrite is currently in progress!${NC}"
echo -e "${YELLOW}========================================================${NC}"

echo -e "\n${BLUE}[NEW VERSION]${NC}"
echo -e "To install the new Rust build, visit the main repository:"
echo -e "${BLUE}https://github.com/FurqanHun/mpv-music${NC}"

echo -e "\n${BLUE}[EXISTING DATA]${NC}"
echo -e "If you wish to remove the legacy version and its data, here is where everything is stored:"

# 1. The Script itself
if [[ -n "$TARGET_PATH" && -f "$TARGET_PATH" ]]; then
    echo -e "   Main Script:     ${YELLOW}$TARGET_PATH${NC}"
fi

# 2. Config Folder
if [[ -d "$CONFIG_DIR" ]]; then
    echo -e "   Config Directory: ${YELLOW}$CONFIG_DIR${NC}"

    # Check for specific files inside
    [[ -f "$CONFIG_DIR/mpv-music.conf" ]] && echo -e "   Config File:    ${YELLOW}mpv-music.conf${NC}"
    [[ -f "$CONFIG_DIR/music_index.jsonl" ]] && echo -e "   Index File:       ${YELLOW}music_index.jsonl${NC}"
    [[ -f "$CONFIG_DIR/music_index.json" ]] && echo -e "   Old Index (if somehow it survived):       ${YELLOW}music_index.json${NC}"
    [[ -f "$CONFIG_DIR/mpv-music-indexer" ]] && echo -e "   Indexer:        ${YELLOW}mpv-music-indexer${NC}"
    [[ -f "$CONFIG_DIR/mpv-music.log" ]] && echo -e "   Log File:       ${YELLOW}mpv-music.log${NC}"
fi

echo -e "\n${BLUE}[MIGRATION COMMAND]${NC}"
echo -e "Run this to install the latest Rust Dev version:"
echo -e "${GREEN}curl -sL https://raw.githubusercontent.com/FurqanHun/mpv-music/master/install.sh | bash -s -- --dev${NC}"

echo -e "\n${YELLOW}The update script will now clean itself up. Goodbye!${NC}"
sleep 1
exit 0
